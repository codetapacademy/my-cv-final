-
  var header = '#awards'
  var awardList = [
    {
      "title": "Best 30s elevator speed speech",
      "description": "I’ve won the 1st place twice and 2nd place once.",
      "location": "Google Campus – London",
      "date": "2014"
    },
    {
      "title": "Best web site for president elections",
      "description": "I've won the best built website for the second runner in the presidential election campaign.",
      "location": "Constanta / Romania",
      "date": "2001"
    }
  ]
#award
.award
  .award__header=header
  each award in awardList
    .award__card
      h3.award__card-title
        span.award__card-icon
          span.my-cv__icon--trophy
        .award__item=award.title
      .award__card-description
        span.award__card-icon
          span.my-cv__icon--info
        .award__item=award.description
      .award__card-location
        span.award__card-icon
          span.my-cv__icon--map2
        .award__item=award.location
      .award__card-date
        span.award__card-icon
          span.my-cv__icon--calendar
        .award__item=award.date
